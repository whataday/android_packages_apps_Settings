		android:key="sms_picker_1"
		android:title="@string/sms_picker_1_title"
		android:summary="@string/sms_picker_1_summary" />
	<Preference
		android:key="sms_picker_2"
		android:title="@string/sms_picker_2_title"
		android:summary="@string/sms_picker_2_summary" />
	<Preference
		android:key="sms_picker_3"
		android:title="@string/sms_picker_3_title"
